<core:FragmentDefinition xmlns="sap.ui.table" xmlns:mvc="sap.ui.core.mvc" xmlns:u="sap.ui.unified" xmlns:m="sap.m"
    xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout">
    <m:Dialog id="SearchLayouts" busy="{view>/LayoutsBusy}" type="Message" contentWidth="80%" title="{i18n>XTIT_findLayoutType}">
        <m:content>
            <l:Splitter>
            <Table id="table" selectionMode="Single" selectionBehavior="Row" rows="{view>/Layouts}"
                visibleRowCount="10" enableCellFilter="{ui>/cellFilterOn}" rowActionCount="1"
                rowSelectionChange=".layouts.onSearchDialogClose" ariaLabelledBy="title">
                <layoutData>
                    <l:SplitterLayoutData size="80%" resizable="false" />
                </layoutData>
                <rowActionTemplate>
                    <RowAction>
                        <items>
                            <RowActionItem icon="sap-icon://table-view" press=".layouts.showColumnsInLayout"></RowActionItem>
                        </items>
                    </RowAction>
                </rowActionTemplate>
                <columns>
                    <Column filterProperty="LAYOUT_NAME" sortProperty="LAYOUT_NAME">
                        <m:Label text="{i18n>XCOL_layoutName}" />
                        <template>
                            <m:Text text="{view>LAYOUT_NAME}" wrapping="false" />
                        </template>
                    </Column>
                    <Column filterProperty="IS_CORPORATE" sortProperty="IS_CORPORATE">
                        <m:Label text="{i18n>XCOL_isCorporate}" />
                        <template>
                            <m:Text text="{view>IS_CORPORATE_translated}" wrapping="false" />
                        </template>
                    </Column>
                </columns>
            </Table>
            <Table id="tableColumns" selectionMode="None" rows="{view>/ShowLayout}"
                visibleRowCount="10"  enableCellFilter="{ui>/cellFilterOn}"  ariaLabelledBy="title">
                <layoutData>
                    <l:SplitterLayoutData size="20%" resizable="false" />
                </layoutData>
                <columns>
                    <Column filterProperty="ColumnName" sortProperty="ColumnName">
                        <m:Label text="{i18n>XFLD_columnName}" />
                        <template>
                            <m:Text text="{view>ColumnName}" wrapping="false" />
                        </template>
                    </Column>
                </columns>
            </Table>
        </l:Splitter>
        </m:content>
        <m:endButton>
            <m:Button text="{i18n>XBUT_cancel}" press=".onClose('SearchLayouts')" />
        </m:endButton>
    </m:Dialog>
</core:FragmentDefinition>