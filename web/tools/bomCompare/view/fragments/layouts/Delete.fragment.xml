<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
    xmlns:l="sap.ui.layout" 
    xmlns:core="sap.ui.core">
    <Dialog  id="Delete" type="Message" title="{i18n>XTIT_deleteLayout}">
        <content>
            <Text text="{i18n>XMSG_deleteLayoutBody}: {view>/LayoutName}" />
        </content>
        <beginButton>
            <Button text="{i18n>XBUT_delete}" type="Reject" press=".layouts.deleteLayout"/>
        </beginButton>
        <endButton>
            <Button text="{i18n>XBUT_cancel}"  press=".onClose('Delete')"/>
        </endButton>
      </Dialog>
</core:FragmentDefinition>