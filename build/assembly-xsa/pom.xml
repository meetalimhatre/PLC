<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>com.sap.plc.xsa</groupId>
        <artifactId>xsac-plc-parent</artifactId>
        <version>${revision}</version>
        <relativePath>../../pom.xml</relativePath>
    </parent>

    <artifactId>xsac-plc-assembly-xsa</artifactId>
    <packaging>pom</packaging>

    <properties>
        <com.sap.xsahaa.java-xsahaa.version>2.0.0</com.sap.xsahaa.java-xsahaa.version>
    </properties>

    <build>
        <plugins>
            <plugin>
                <artifactId>maven-resources-plugin</artifactId>
                <version>3.1.0</version>
                <executions>
                    <execution>
                        <id>prepare-the-xsa-mta</id>
                        <phase>validate</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${project.build.directory}</outputDirectory>
                            <resources>
                                <resource>
                                    <directory>./</directory>
                                    <filtering>true</filtering>
                                    <includes>
                                        <include>mta.yaml</include>
                                        <include>package.json</include>
                                        <include>SL_MANIFEST.XML</include>
                                        <include>cleanupCSVs.js</include>
                                    </includes>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>
                    <execution>
                        <id>copy-db-module</id>
                        <phase>validate</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${project.build.directory}/db</outputDirectory>
                            <resources>
                                <resource>
                                    <directory>../../db</directory>
                                    <includes>
                                        <include>cfg/</include>
                                        <include>src/</include>
                                        <include>package.json</include>
                                        <include>undeploy.json</include>
                                    </includes>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>
                    <execution>
                        <id>copy-xsjs-module</id>
                        <phase>validate</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${project.build.directory}/xsjs</outputDirectory>
                            <resources>
                                <resource>
                                    <directory>../../xsjs</directory>
                                    <includes>
                                        <include>lib/</include>
                                        <include>main.js</include>
                                        <include>package.json</include>
                                    </includes>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>
                    <execution>
                        <id>copy-web-module</id>
                        <phase>validate</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${project.build.directory}/web</outputDirectory>
                            <resources>
                                <resource>
                                    <directory>../../web</directory>
                                    <includes>
                                        <include>xsa/</include>
                                        <include>package.json</include>
                                    </includes>
                                    <excludes>
                                        <exclude>xsa/xs-app-dev.json</exclude>
                                    </excludes>
                                </resource>    
                            </resources>
                        </configuration>
                    </execution>
                    <execution>
                        <id>copy-web-tools</id>
                        <phase>validate</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${project.build.directory}/web/xsa/resources</outputDirectory>
                            <resources>
                                <resource>
                                    <directory>../../web/tools</directory>
                                    <includes>
                                        <include>repl/</include>
                                        <include>bomCompare/</include>
                                        <include>commonUi5/</include>
                                        <include>retentionPeriods/</include>
                                        <include>openVersion/</include>
                                    </includes>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>
                    <execution>
                        <id>copy-xsjs-swagger-data</id>
                        <phase>validate</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${project.build.directory}/web/xsa/resources/doc/xsjs</outputDirectory>
                            <resources>
                                <resource>
                                    <directory>../../doc/swagger</directory>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>
                    <execution>
                        <id>copy-publicapi-swagger-data</id>
                        <phase>validate</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${project.build.directory}/web/xsa/resources/doc/publicapi</outputDirectory>
                            <resources>
                                <resource>
                                    <directory>../../java-plc-parent/publicapi-parent/modules/xsac-plc-publicapi-swagger/src/main/resources</directory>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>
                    <execution>
                        <id>copy-service-configurations</id>
                        <phase>validate</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${project.build.directory}/servicesConfig</outputDirectory>
                            <resources>
                                <resource>
                                    <directory>../../servicesConfig</directory>
                                    <excludes>
                                        <exclude>xsuaa/xs-security-cf-app.json</exclude>
                                        <exclude>xsuaa/xs-security-cf-broker.json</exclude>
                                        <exclude>autoscaler/</exclude>
                                    </excludes>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-antrun-plugin</artifactId>
            </plugin>

           <plugin>
                <groupId>com.github.eirslett</groupId>
                <artifactId>frontend-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>mbt-build</id>
                        <goals>
                            <goal>npm</goal>
                        </goals>
                        <configuration>
                            <arguments>run build</arguments>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>com.sap.lm.sl.alm.prod.assembler</groupId>
                <artifactId>alm-prod-assembler-maven-plugin</artifactId>
                <version>1.4.1</version>
                <configuration>
                    <mtaSourceDirs>
                        <param>${project.build.directory}</param>
                    </mtaSourceDirs>
                    <targetDir>${project.build.directory}</targetDir>
                    <resultZip>${project.build.directory}/${project.artifactId}.zip</resultZip>
                    <overwrite>true</overwrite>
                </configuration>
                <executions>
                    <execution>
                        <id>create-sca</id>
                        <phase>package</phase>
                        <goals>
                            <goal>assemble</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>build-helper-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>attach-distributions</id>
                        <phase>verify</phase>
                        <goals>
                            <goal>attach-artifact</goal>
                        </goals>
                        <configuration>
                            <artifacts>
                                <artifact>
                                    <file>${project.build.directory}/${project.artifactId}.mtar</file>
                                    <type>mtar</type>
                                </artifact>
                                <artifact>
                                    <file>${project.build.directory}/${project.artifactId}.zip</file>
                                    <type>zip</type>
                                </artifact>
                            </artifacts>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            
        </plugins>
    </build>
</project>
